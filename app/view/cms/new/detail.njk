{% extends "../template.njk" %}
{% import "../macro.njk" as fragment %}

{% block body %}

{{ fragment.footer(headTitle="热点新闻") }}


<section class="ui-container">

    <section style="margin-top: 44px;">
        <div class="ui-whitespace">
            <div style="padding-top: 20px;padding-bottom: 20px;border-bottom: 1px solid #c4c4c4; font-size: 20px; color: #333333;">{{newModel.data.data.title}}</div>
            <div>
                <ul class="ui-list">
                    <li class="ui-border-t" style="margin-left: 0px;">
                        <div class="ui-avatar">
                            <span style="background-image:url(http://placeholder.qiniudn.com/100x100)"></span>
                        </div>
                        <div class="ui-list-info">
                            <h4 class="ui-nowrap">移民小编</h4>
                            <p class="ui-nowrap">
                                <span style="display: inline-block; padding-left:20px;height: 15px; line-height: 15px; background-image: url(/public/img/time.png);background-repeat: no-repeat;background-size: 15px;">{{helper.timeFormat(new.createTime,'YYYY.MM.DD')}}</span>
                                <span style="display: inline-block; margin-left: 20px; padding-left:25px;height: 15px; line-height: 15px; background-image: url(/public/img/view.png);background-repeat: no-repeat;background-size: 20px;">300</span>
                            </p>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="contentArea">
                {{ newModel.data.data.content | safe }}
            </div>
        </div>
    </section>


</section><!-- /.ui-container-->

<style>
    body {
        background-color:#ffffff!important;
    }
    .ui-tab-nav li.current{
        color: #dfc17b;
        border-bottom: 2px #dfc17b solid;
    }
</style>

<script>
    $('.ui-list li,.ui-tiled li').click(function () {
        if ($(this).data('href')) {
            location.href = $(this).data('href');
        }
    });
    $('.ui-header .ui-btn').click(function () {
        location.href = 'index.html';
    });
</script>

{% endblock %}