{% extends "../template.njk" %}
{% import "../macro.njk" as fragment %}

{% block body %}

{{ fragment.footer(headTitle="热点新闻") }}


<section class="ui-container">

    <section style="margin-top: 44px;">
        <ul class="ui-list ui-list-link ui-border-tb">
            {% for new in newList.data.list %}
            <li class="ui-border-t" data-href="/new/detail?id={{new.id}}">
                <div class="ui-list-img">
                    <span style="background-image:url({{new.thumbnail}})"></span>
                </div>
                <div class="ui-list-info">
                    <h4 class="ui-nowrap">{{new.title}}</h4>
                    <p class="ui-nowrap">{{new.description}}</p>
                </div>
            </li>
            {% endfor %}
        </ul>

        <div class="ui-loading-wrap" style="margin-top: 20px;margin-bottom: 20px;">
            <p>加载中</p>
            <i class="ui-loading"></i>
        </div>
    </section>


</section><!-- /.ui-container-->

<style>
    .ui-tab-nav li.current{
        color: #dfc17b;
        border-bottom: 2px #dfc17b solid;
    }
</style>

<script>
    $('.ui-list li,.ui-tiled li').click(function () {
        if ($(this).data('href')) {
            location.href = $(this).data('href');
        }
    });
    $('.ui-header .ui-btn').click(function () {
        location.href = 'index.html';
    });
</script>

{% endblock %}